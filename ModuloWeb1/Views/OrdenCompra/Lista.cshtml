@model List<ModuloWeb.ENTITIES.OrdenCompra>

@{
    ViewData["Title"] = "Listado de Órdenes de Compra";
}

<div class="container mt-4">
    <div class="card shadow-lg p-4">
        <h2 class="text-center text-primary mb-4">Listado de Órdenes de Compra</h2>

        <table class="table table-bordered table-hover">
            <thead class="table-dark">
                <tr>
                    <th>ID Orden</th>
                    <th>ID Proveedor</th>
                    <th>Total</th>
                    <th>Fecha</th>
                    <th>Estado</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var orden in Model)
                {
                    <tr>
                        <td>@orden.IdOrden</td>
                        <td>@orden.IdProveedor</td>
                        <td>$@orden.Total</td>
                        <td>@orden.Fecha.ToString("dd/MM/yyyy")</td>
                        <td>@orden.Estado</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
